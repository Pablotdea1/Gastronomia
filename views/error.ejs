  <div class="alert alert-danger">
    <h4 class="alert-heading">
      <i class="fas fa-exclamation-triangle"></i> 
      <%= title %>
    </h4>
    <p><%= message %></p>
    <hr>
    <div class="mt-3">
      <a href="javascript:history.back()" class="btn btn-outline-danger">
