<%- include('../partials/header', { title }) %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Restaurantes</h1>
    <a href="/restaurantes/new" class="btn btn-primary">
      <i class="fas fa-plus"></i> Nuevo Restaurante
    </a>
  </div>

  <div class="row">
    <% if (restaurantes && restaurantes.length > 0) { %>
      <% restaurantes.forEach(restaurante => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= restaurante.nombre %></h5>
              <p class="card-text">
                Tipo de cocina: <%= restaurante.tipo_cocina %><br>
                Precio promedio: $<%= restaurante.precio_promedio %>
              </p>
              <div class="btn-group">
                <a href="/restaurantes/<%= restaurante.id %>" class="btn btn-info btn-sm">Ver</a>
                <a href="/restaurantes/<%= restaurante.id %>/edit" class="btn btn-warning btn-sm">Editar</a>
                <form action="/restaurantes/<%= restaurante.id %>?_method=DELETE" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Â¿EstÃ¡s seguro?')">Eliminar</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12">
        <div class="alert alert-info">
          No hay restaurantes registrados.
        </div>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>